{#
/**
 * @file
 * Theme implementation for article node teaser view mode (for listing pages).
 *
 * Available variables:
 * - node: The node entity
 * - content: Node content render array
 * - label: The title of the node
 * - url: Direct URL to node
 */
#}
{%
  set classes = [
    'masonry-item',
    'bg-white',
    'rounded-lg',
    'overflow-hidden',
    'shadow-sm',
    'hover:shadow-md',
    'transition-shadow',
  ]
%}
<article{{ attributes.addClass(classes) }}>
    {% if content.field_image|render %}
        <a href="{{ url }}">
            {{ content.field_image }}
        </a>
    {% endif %}

    <div class="p-6">
        {# Author and Action Buttons #}
        <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-2">
                {% if author_avatar %}
                    <img src="{{ author_avatar }}" alt="{{ author_name }}" class="w-8 h-8 rounded-full object-cover">
                {% else %}
                    <div class="w-8 h-8 bg-teal-600 rounded-full flex items-center justify-center">
                        <span class="text-white font-bold text-sm">{{ author_initial }}</span>
                    </div>
                {% endif %}
                <div class="text-sm font-semibold text-gray-900">{{ author_name }}</div>
            </div>
            <div class="flex space-x-2">
                <button class="px-3 py-1 text-xs border border-gray-300 rounded-md hover:bg-gray-50 dark:border-gray-600 dark:hover:bg-gray-700">{{ 'Share'|t }}</button>
                <button class="px-3 py-1 text-xs bg-gray-900 text-white rounded-md hover:bg-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600">{{ 'Collect'|t }}</button>
            </div>
        </div>

        {% if content.field_tags|render %}
            <div class="flex flex-wrap gap-2 mb-3">
                {{ content.field_tags }}
            </div>
        {% endif %}

        {% if label %}
            <h2 class="text-xl font-bold text-gray-900 mb-3">
                <a href="{{ url }}" class="hover:text-gray-700">{{ label }}</a>
            </h2>
        {% endif %}

        {% if body_plain %}
            <p class="text-sm text-gray-600 mb-4 line-clamp-3">
                {{ body_plain }}
            </p>
        {% endif %}

        <div class="flex items-center text-sm text-gray-500">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <span>{{ view_count|default('0') }} {{ 'views'|t }} Â· {{ date }}</span>
        </div>
    </div>
</article>
