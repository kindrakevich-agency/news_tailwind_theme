{#
/**
 * @file
 * Theme implementation for pagination.
 *
 * Available variables:
 * - items: List of pager items
 * - current: Current page number
 */
#}
{% if items %}
    <nav class="flex items-center justify-center space-x-2 my-4 md:my-12" role="navigation" aria-label="{{ 'Pagination'|t }}">
        {# Previous button #}
        {% if items.previous %}
            <a href="{{ items.previous.href }}" class="px-6 py-4 md:px-4 md:py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" rel="prev" aria-label="{{ 'Previous page'|t }}">
                <svg class="w-8 h-8 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
        {% else %}
            <button class="px-6 py-4 md:px-4 md:py-2 border border-gray-300 rounded-md text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                <svg class="w-8 h-8 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
        {% endif %}

        {# Page numbers - hidden on mobile, visible on desktop #}
        {% if items.pages %}
            <div class="hidden md:flex md:items-center md:space-x-2">
                {% for key, item in items.pages %}
                    {% if current == key %}
                        <span class="px-4 py-2 bg-gray-900 text-white dark:bg-white dark:text-black rounded-md font-semibold">{{ key }}</span>
                    {% else %}
                        <a href="{{ item.href }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">{{ key }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {# Next button #}
        {% if items.next %}
            <a href="{{ items.next.href }}" class="px-6 py-4 md:px-4 md:py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" rel="next" aria-label="{{ 'Next page'|t }}">
                <svg class="w-8 h-8 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        {% else %}
            <button class="px-6 py-4 md:px-4 md:py-2 border border-gray-300 rounded-md text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                <svg class="w-8 h-8 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        {% endif %}
    </nav>
{% endif %}
