{#
/**
 * @file
 * Theme implementation for the front page.
 *
 * Available variables:
 * - page: Page content render array
 * - logged_in: TRUE if the user is logged in
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
<head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
</head>
<body{{ attributes.addClass('bg-gray-50') }}>
    <a href="#main-content" class="visually-hidden focusable">
        {{ 'Skip to main content'|t }}
    </a>
    {{ page_top }}

    {% include '@news_theme/includes/header-menu.html.twig' %}
    {% include '@news_theme/includes/header-tags.html.twig' with {'tags': tags, 'current_term': null} %}

    <!-- Filter Buttons - Main Menu -->
    {% if main_menu_items %}
        <div class="max-w-7xl mx-auto mt-6">
            <div class="flex space-x-2 overflow-x-auto scrollbar-hide">
                {% for item in main_menu_items %}
                    {% set is_first = loop.first %}
                    <a href="{{ item.url }}" class="px-4 py-2 {{ item.is_active ? 'bg-gray-200 text-gray-900' : 'bg-white text-gray-700' }} text-sm rounded-full border border-gray-300 hover:bg-gray-50 whitespace-nowrap {{ is_first ? 'ml-4' : '' }}">
                        {{ item.title }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Newsletter Featured Section -->
    {% if newsletter_data %}
        {% include '@news_theme/includes/newsletter-featured.html.twig' with {
            'newsletter_header': newsletter_header,
            'latest_article': newsletter_data.latest_article,
            'featured_article': newsletter_data.featured_article
        } %}
    {% endif %}

    <!-- Exchange Rates -->
    {% include '@news_theme/includes/exchange-rates.html.twig' with {
        'exchange_rates': exchange_rates
    } %}

    <!-- Top News by Category -->
    {% include '@news_theme/includes/top-news-by-category.html.twig' with {
        'top_news_by_category': top_news_by_category
    } %}

    <!-- Main Content Grid -->
    <div id="main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-0 md:mt-8">
        {{ page.content }}
    </div>

    {% include '@news_theme/includes/footer.html.twig' %}

    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
</body>
</html>
