{#
/**
 * @file
 * Base HTML template for all pages.
 *
 * This template provides the common HTML structure for all page types.
 * Child templates can extend this and override specific blocks.
 *
 * Available blocks:
 * - head_extra: Additional head content
 * - before_content: Content before main content area
 * - content: Main content area
 * - after_content: Content after main content area
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
<head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
    {% block head_extra %}{% endblock %}
</head>
<body{{ attributes.addClass('bg-gray-50') }}>
    <a href="#main-content" class="visually-hidden focusable">
        {{ 'Skip to main content'|t }}
    </a>
    {{ page_top }}

    {% include '@news_theme/includes/header-menu.html.twig' %}
    {% include '@news_theme/includes/header-tags.html.twig' with {'tags': tags, 'current_term': current_term|default(null)} %}

    {% block before_content %}{% endblock %}

    {% block content %}
        <div id="main-content">
            {{ page.content }}
        </div>
    {% endblock %}

    {% block after_content %}{% endblock %}

    {% include '@news_theme/includes/footer.html.twig' %}

    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
</body>
</html>
