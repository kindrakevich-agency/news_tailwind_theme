{#
/**
 * @file
 * Theme implementation for displaying a single search result.
 *
 * Available variables:
 * - url: URL of the result.
 * - title: Title of the result.
 * - snippet: A snippet from the result content.
 * - info: Additional information about the result.
 * - plugin_id: The plugin ID (e.g., "node_search").
 * - result: The result object.
 * - info_split: An array of info items split by the delimiter.
 * - date: Formatted date.
 * - node: The node object if available.
 * - image: The rendered image field.
 * - tags: The rendered tags field.
 * - author_name: Author's name.
 * - author_avatar: Author's avatar URL.
 * - author_initial: Author's first letter.
 * - view_count: Number of views.
 * - node_id: Node ID for collect button.
 * - body_excerpt: Longer body excerpt (300 chars).
 */
#}
<article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 h-full flex flex-col">
    {% if image %}
        <a href="{{ url }}" class="block overflow-hidden">
            <div class="aspect-video overflow-hidden">
                {{ image }}
            </div>
        </a>
    {% endif %}

    <div class="p-6 flex-1 flex flex-col">
        {# Action Buttons #}
        <div class="flex items-center justify-end mb-4">
            <div class="flex space-x-2">
                {# Share Button with Dropdown #}
                <div class="relative share-dropdown-container">
                    <button class="share-button p-2 focus:outline-none" data-url="{{ url }}" data-title="{{ title }}" aria-label="{{ 'Share'|t }}">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                        </svg>
                    </button>
                    <div class="share-dropdown hidden absolute right-0 mt-1 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg z-10 border border-gray-200 dark:border-gray-700">
                        <a href="#" class="share-facebook block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-t-md" data-url="{{ url }}">
                            <svg class="w-4 h-4 inline-block mr-2" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            {{ 'Facebook'|t }}
                        </a>
                        <a href="#" class="share-telegram block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-b-md" data-url="{{ url }}">
                            <svg class="w-4 h-4 inline-block mr-2" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 8.221l-1.97 9.28c-.145.658-.537.818-1.084.508l-3-2.21-1.446 1.394c-.14.18-.357.223-.548.223l.188-2.85 5.18-4.68c.223-.198-.054-.308-.346-.11l-6.4 4.03-2.76-.918c-.6-.187-.612-.6.125-.89l10.782-4.156c.5-.18.943.11.78.89z"/>
                            </svg>
                            {{ 'Telegram'|t }}
                        </a>
                    </div>
                </div>
                {# Collect Button #}
                <button class="collect-button p-2 focus:outline-none" data-nid="{{ node_id }}" data-collect-text="{{ 'Collect'|t }}" data-collected-text="{{ 'Collected'|t }}" aria-label="{{ 'Collect'|t }}">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                </button>
            </div>
        </div>

        {% if tags %}
            <div class="flex flex-wrap gap-2 mb-3">
                {{ tags }}
            </div>
        {% endif %}

        {% if title %}
            <h3 class="text-xl font-bold mb-3 text-gray-900 hover:text-teal-600 transition-colors">
                <a href="{{ url }}" class="no-underline">
                    {{ title }}
                </a>
            </h3>
        {% endif %}

        {% if body_excerpt %}
            <p class="text-sm text-gray-600 mb-4 line-clamp-3 flex-1">
                {{ body_excerpt }}
            </p>
        {% elseif snippet %}
            <div class="text-sm text-gray-600 mb-4 line-clamp-3 flex-1">
                {{ snippet }}
            </div>
        {% endif %}

        <div class="flex items-center text-sm text-gray-500">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <span>{{ view_count|default('0') }} {{ 'views'|t }}{% if info %} Â· {{ info }}{% endif %}</span>
        </div>
    </div>
</article>
