{#
/**
 * @file
 * Theme implementation for top news by category.
 *
 * Available variables:
 * - top_news_by_category: Array of articles with their category names.
 */
#}
{% if top_news_by_category %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 md:py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-0 lg:gap-6">
        {% for column in top_news_by_category|batch(5) %}
            <div class="bg-white rounded-none lg:rounded-lg shadow-sm p-6 space-y-4">
                {% for article in column %}
                    <div>
                        <a href="{{ article.category_url }}" class="px-2 py-1 text-xs bg-teal-100 text-teal-800 rounded hover:bg-teal-200 transition-colors inline-block mb-2">
                            {{ article.category_name|upper }}
                        </a>
                        <a href="{{ article.url }}" class="text-base md:text-sm text-gray-700 hover:text-gray-900 transition-colors line-clamp-2 block">
                            {{ article.title }}
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}
