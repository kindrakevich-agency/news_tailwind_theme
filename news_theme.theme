/**
 * Implements hook_preprocess_HOOK() for node templates.
 */
function news_theme_preprocess_node(&$variables) {
  /** @var \Drupal\node\NodeInterface $node */
  $node = $variables['node'];

  // Add author name and avatar.
  $author = $node->getOwner();

  // Check if user is anonymous.
  if ($author->isAnonymous()) {
    $variables['author_name'] = t('Anonymous');
    $variables['author_avatar'] = NULL;
    $variables['author_initial'] = 'A';
  }
  else {
    $variables['author_name'] = $author->getDisplayName();

    // Check if user has field_avatar field.
    if ($author->hasField('field_avatar') && !$author->get('field_avatar')->isEmpty()) {
      $avatar_field = $author->get('field_avatar')->first();
      if ($avatar_field && $avatar_field->entity) {
        $variables['author_avatar'] = \Drupal::service('file_url_generator')->generateAbsoluteString($avatar_field->entity->getFileUri());
      }
      else {
        $variables['author_avatar'] = NULL;
      }
    }
    else {
      $variables['author_avatar'] = NULL;
    }

    // Get first letter of author name for initial.
    $name = $author->getDisplayName();
    $variables['author_initial'] = mb_strtoupper(mb_substr($name, 0, 1));
  }

  // Add formatted date.
  $variables['date'] = \Drupal::service('date.formatter')->format(
    $node->getCreatedTime(),
    'custom',
    'j F Y'
  );

  // Calculate reading time based on body field.
  if ($node->hasField('body') && !$node->get('body')->isEmpty()) {
    $body = $node->get('body')->value;
    $word_count = str_word_count(strip_tags($body));
    $reading_time = ceil($word_count / 200); // Assuming 200 words per minute.
    $variables['reading_time'] = $reading_time;
  }

  // Clean up body field for full view mode.
  if ($variables['view_mode'] == 'full' && $node->hasField('body') && !$node->get('body')->isEmpty()) {
    $body_value = $node->get('body')->value;

    // Get field_image filenames to remove from body.
    $image_filenames = [];
    if ($node->hasField('field_image') && !$node->get('field_image')->isEmpty()) {
      foreach ($node->get('field_image') as $image_item) {
        if ($image_item->entity) {
          $image_filenames[] = $image_item->entity->getFilename();
        }
      }
    }

    // Remove images that match field_image filenames.
    if (!empty($image_filenames)) {
      foreach ($image_filenames as $filename) {
        // Remove img tags containing this filename.
        $pattern = '/<img[^>]*' . preg_quote($filename, '/') . '[^>]*>/i';
        $body_value = preg_replace($pattern, '', $body_value);
      }
    }

    // Remove empty img tags (without src or with empty src).
    $body_value = preg_replace('/<img[^>]*src\s*=\s*["\']?\s*["\']?[^>]*>/i', '', $body_value);
    $body_value = preg_replace('/<img(?![^>]*src=)[^>]*>/i', '', $body_value);

    // Update the body field with cleaned content.
    $variables['content']['body'][0]['#text'] = $body_value;
  }

  // Get view count from statistics module if available.
  $variables['view_count'] = 0;
  if (\Drupal::moduleHandler()->moduleExists('statistics')) {
    // Try to get statistics from the node_counter table directly.
    $database = \Drupal::database();
    try {
      // Check if table exists first.
      if ($database->schema()->tableExists('node_counter')) {
        $query = $database->select('node_counter', 'nc')
          ->fields('nc', ['totalcount'])
          ->condition('nid', $node->id());
        $result = $query->execute()->fetchField();
        if ($result !== FALSE) {
          $variables['view_count'] = (int) $result;
        }
      }
    }
    catch (\Exception $e) {
      // Log the error but don't break the page.
      \Drupal::logger('news_theme')->error('Error fetching view count: @message', ['@message' => $e->getMessage()]);
    }
  }

  // Load tags for header navigation.
  $variables['tags'] = _news_theme_load_tags();

  // Get search query from request for search field.
  $request = \Drupal::request();
  $variables['search_query'] = $request->query->get('keys') ?: '';

  // Add plain text body for teaser view mode.
  if ($variables['view_mode'] == 'teaser' && $node->hasField('body') && !$node->get('body')->isEmpty()) {
    $body_value = $node->get('body')->value;
    // Strip HTML tags and get plain text.
    $plain_text = strip_tags($body_value);
    // Truncate to 200 characters.
    if (mb_strlen($plain_text) > 200) {
      $plain_text = mb_substr($plain_text, 0, 200) . '...';
    }
    $variables['body_plain'] = $plain_text;
  }

  // Get prev/next articles and article tags (only for full view mode).
  if ($variables['view_mode'] == 'full' && $node->bundle() == 'article') {
    $prev_next = _news_theme_get_prev_next_articles($node);
    $variables['prev_article'] = $prev_next['prev'];
    $variables['next_article'] = $prev_next['next'];

    // Get article tags for display.
    $variables['article_tags'] = [];
    if ($node->hasField('field_tags') && !$node->get('field_tags')->isEmpty()) {
      foreach ($node->get('field_tags') as $tag_item) {
        $term = $tag_item->entity;
        if ($term) {
          $variables['article_tags'][] = [
            'name' => $term->getName(),
            'url' => \Drupal::service('path_alias.manager')->getAliasByPath('/taxonomy/term/' . $term->id()),
          ];
        }
      }
    }

    // Get related articles based on tags.
    $variables['related_articles'] = _news_theme_get_related_articles($node);
  }
}

/**
 * Implements hook_preprocess_HOOK() for field templates.
 */
function news_theme_preprocess_field(&$variables) {
  $element = $variables['element'];

  // Format tags field as links.
  if ($element['#field_name'] == 'field_tags') {
    // Define color schemes for tags with dark mode variants.
    $color_schemes = [
      ['bg' => 'bg-blue-100 dark:bg-blue-900/30', 'text' => 'text-blue-800 dark:text-blue-400', 'hover' => 'hover:bg-blue-200 dark:hover:bg-blue-900/40'],
      ['bg' => 'bg-purple-100 dark:bg-purple-900/30', 'text' => 'text-purple-800 dark:text-purple-400', 'hover' => 'hover:bg-purple-200 dark:hover:bg-purple-900/40'],
      ['bg' => 'bg-red-100 dark:bg-red-900/30', 'text' => 'text-red-800 dark:text-red-400', 'hover' => 'hover:bg-red-200 dark:hover:bg-red-900/40'],
      ['bg' => 'bg-green-100 dark:bg-green-900/30', 'text' => 'text-green-800 dark:text-green-400', 'hover' => 'hover:bg-green-200 dark:hover:bg-green-900/40'],
      ['bg' => 'bg-yellow-100 dark:bg-yellow-900/30', 'text' => 'text-yellow-800 dark:text-yellow-400', 'hover' => 'hover:bg-yellow-200 dark:hover:bg-yellow-900/40'],
      ['bg' => 'bg-pink-100 dark:bg-pink-900/30', 'text' => 'text-pink-800 dark:text-pink-400', 'hover' => 'hover:bg-pink-200 dark:hover:bg-pink-900/40'],
      ['bg' => 'bg-indigo-100 dark:bg-indigo-900/30', 'text' => 'text-indigo-800 dark:text-indigo-400', 'hover' => 'hover:bg-indigo-200 dark:hover:bg-indigo-900/40'],
      ['bg' => 'bg-teal-100 dark:bg-teal-900/30', 'text' => 'text-teal-800 dark:text-teal-400', 'hover' => 'hover:bg-teal-200 dark:hover:bg-teal-900/40'],
    ];

    $variables['tag_colors'] = [];
    foreach ($variables['items'] as $delta => $item) {
      if (isset($element['#items'][$delta])) {
        $tid = $element['#items'][$delta]->target_id;
        $term = Term::load($tid);
        if ($term) {
          // Set URL and title for the tag link.
          $variables['items'][$delta]['content']['#url'] = Url::fromRoute('entity.taxonomy_term.canonical', ['taxonomy_term' => $tid]);
          $variables['items'][$delta]['content']['#title'] = $term->getName();

          // Assign a consistent color based on term ID.
          $color_index = $tid % count($color_schemes);
          $variables['tag_colors'][$delta] = $color_schemes[$color_index];
        }
      }
    }
  }

  // For image field, only show first image.
  if ($element['#field_name'] == 'field_image' && $element['#view_mode'] == 'teaser') {
    // Keep only the first item.
    if (count($variables['items']) > 1) {
      $variables['items'] = array_slice($variables['items'], 0, 1);
    }
  }
}

/**
 * Helper function to load tags from taxonomy vocabulary.
 */
function _news_theme_load_tags() {
  $tags = [];

  // Load all terms from the 'tags' vocabulary.
  $term_storage = \Drupal::entityTypeManager()->getStorage('taxonomy_term');
  $terms = $term_storage->loadTree('tags', 0, NULL, TRUE);

  // Count nodes for each term and prepare array.
  foreach ($terms as $term) {
    // Count published article nodes tagged with this term.
    $query = \Drupal::entityQuery('node')
      ->condition('type', 'article')
      ->condition('status', 1)
      ->condition('field_tags', $term->id())
      ->accessCheck(TRUE);
    $count = $query->count()->execute();

    $tags[] = [
      'id' => $term->id(),
      'name' => $term->getName(),
      'count' => $count,
    ];
  }

  // Sort by count descending.
  usort($tags, function($a, $b) {
    return $b['count'] - $a['count'];
  });

  return $tags;
}

/**
 * Helper function to get main menu items.
 */
function _news_theme_get_main_menu_items() {
  $menu_tree = \Drupal::menuTree();
  $menu_name = 'main';
  $parameters = $menu_tree->getCurrentRouteMenuTreeParameters($menu_name);
  $parameters->setMaxDepth(1);
  $tree = $menu_tree->load($menu_name, $parameters);

  // Use standard menu tree manipulators.
  $manipulators = [
    ['callable' => 'menu.default_tree_manipulators:checkAccess'],
    ['callable' => 'menu.default_tree_manipulators:generateIndexAndSort'],
  ];
  $tree = $menu_tree->transform($tree, $manipulators);

  // Get domain restrictions if domain_menu_item module is enabled.
  $domain_restrictions = [];
  $active_domain_id = NULL;

  if (\Drupal::moduleHandler()->moduleExists('domain') &&
      \Drupal::moduleHandler()->moduleExists('domain_menu_item')) {

    // Get the current domain.
    $domain_negotiator = \Drupal::service('domain.negotiator');
    $active_domain = $domain_negotiator->getActiveDomain();

    if ($active_domain) {
      $active_domain_id = $active_domain->id();

      // Get all menu links that have domain restrictions.
      $database = \Drupal::database();
      $query = $database->select('domain_menu_item', 'd')
        ->fields('d', ['menu_link_content_id', 'domain_id']);
      $results = $query->execute()->fetchAll();

      // Group by menu link content id.
      foreach ($results as $row) {
        $domain_restrictions[$row->menu_link_content_id][] = $row->domain_id;
      }
    }
  }

  $current_path = \Drupal::service('path.current')->getPath();
  $current_url = Url::fromUserInput($current_path)->toString();

  $menu_items = [];
  foreach ($tree as $element) {
    // Apply domain filtering if domain module is enabled.
    if ($active_domain_id && !empty($domain_restrictions)) {
      $plugin_id = $element->link->getPluginId();

      // Check if this is a menu_link_content item.
      if (strpos($plugin_id, 'menu_link_content:') === 0) {
        $uuid = str_replace('menu_link_content:', '', $plugin_id);

        // Load the menu link content entity to get the numeric ID.
        $entities = \Drupal::entityTypeManager()
          ->getStorage('menu_link_content')
          ->loadByProperties(['uuid' => $uuid]);

        if ($entities) {
          $entity = reset($entities);
          $menu_link_id = $entity->id();

          // Check if this menu link has domain restrictions.
          if (isset($domain_restrictions[$menu_link_id])) {
            $allowed_domains = $domain_restrictions[$menu_link_id];

            // If current domain is not in the allowed list, skip this link.
            if (!in_array($active_domain_id, $allowed_domains)) {
              continue;
            }
          }
        }
      }
    }

    $url_object = $element->link->getUrlObject();
    $is_active = FALSE;

    // Check if this menu item is active.
    if ($url_object->toString() === $current_url) {
      $is_active = TRUE;
    }

    $menu_items[] = [
      'title' => $element->link->getTitle(),
      'url' => $url_object,
      'is_active' => $is_active,
    ];
  }

  return $menu_items;
}

/**
 * Helper function to get previous and next articles based on tags and date.
 */
function _news_theme_get_prev_next_articles($current_node) {
  $result = ['prev' => NULL, 'next' => NULL];

  // Get tags from current article.
  if (!$current_node->hasField('field_tags') || $current_node->get('field_tags')->isEmpty()) {
    return $result;
  }

  $tag_ids = [];
  foreach ($current_node->get('field_tags') as $tag) {
    $tag_ids[] = $tag->target_id;
  }

  if (empty($tag_ids)) {
    return $result;
  }

  $current_created = $current_node->getCreatedTime();
  $current_nid = $current_node->id();

  // Query for previous article (older).
  $query_prev = \Drupal::entityQuery('node')
    ->condition('type', 'article')
    ->condition('status', 1)
    ->condition('nid', $current_nid, '!=')
    ->condition('field_tags', $tag_ids, 'IN')
    ->condition('created', $current_created, '<')
    ->sort('created', 'DESC')
    ->range(0, 1)
    ->accessCheck(TRUE);

  $nids_prev = $query_prev->execute();
  if (!empty($nids_prev)) {
    $prev_nid = reset($nids_prev);
    $prev_node = Node::load($prev_nid);
    if ($prev_node) {
      $result['prev'] = [
        'url' => $prev_node->toUrl()->toString(),
        'title' => $prev_node->getTitle(),
      ];
    }
  }

  // Query for next article (newer).
  $query_next = \Drupal::entityQuery('node')
    ->condition('type', 'article')
    ->condition('status', 1)
    ->condition('nid', $current_nid, '!=')
    ->condition('field_tags', $tag_ids, 'IN')
    ->condition('created', $current_created, '>')
    ->sort('created', 'ASC')
    ->range(0, 1)
    ->accessCheck(TRUE);

  $nids_next = $query_next->execute();
  if (!empty($nids_next)) {
    $next_nid = reset($nids_next);
    $next_node = Node::load($next_nid);
    if ($next_node) {
      $result['next'] = [
        'url' => $next_node->toUrl()->toString(),
        'title' => $next_node->getTitle(),
      ];
    }
  }

  return $result;
}

/**
 * Helper function to get related articles based on tags (up to 10).
 */
function _news_theme_get_related_articles($current_node) {
  $related_articles = [];

  // Get tags from current article.
  if (!$current_node->hasField('field_tags') || $current_node->get('field_tags')->isEmpty()) {
    return $related_articles;
  }

  $tag_ids = [];
  foreach ($current_node->get('field_tags') as $tag) {
    $tag_ids[] = $tag->target_id;
  }

  if (empty($tag_ids)) {
    return $related_articles;
  }

  $current_nid = $current_node->id();

  // Query for related articles.
  $query = \Drupal::entityQuery('node')
    ->condition('type', 'article')
    ->condition('status', 1)
    ->condition('nid', $current_nid, '!=')
    ->condition('field_tags', $tag_ids, 'IN')
    ->sort('created', 'DESC')
    ->range(0, 10)
    ->accessCheck(TRUE);

  $nids = $query->execute();

  if (!empty($nids)) {
    $view_builder = \Drupal::entityTypeManager()->getViewBuilder('node');
    foreach ($nids as $nid) {
      $node = Node::load($nid);
      if ($node) {
        $related_articles[] = $view_builder->view($node, 'teaser');
      }
    }
  }

  return $related_articles;
}

/**
 * Implements hook_preprocess_HOOK() for search result templates.
 */
function news_theme_preprocess_search_result(&$variables) {
  // Get the node from the result if it's a node search result.
  if (isset($variables['result']['node'])) {
    $node = $variables['result']['node'];

    // Add the image if available.
    if ($node->hasField('field_image') && !$node->get('field_image')->isEmpty()) {
      $view_builder = \Drupal::entityTypeManager()->getViewBuilder('node');
      $image_render = $view_builder->viewField($node->get('field_image'), [
        'label' => 'hidden',
        'type' => 'image',
        'settings' => [
          'image_style' => '',
          'image_link' => '',
        ],
      ]);
      // Only show first image.
      if (isset($image_render[0])) {
        $variables['image'] = $image_render[0];
      }
    }

    // Add tags if available.
    if ($node->hasField('field_tags') && !$node->get('field_tags')->isEmpty()) {
      $view_builder = \Drupal::entityTypeManager()->getViewBuilder('node');
      $variables['tags'] = $view_builder->viewField($node->get('field_tags'), [
        'label' => 'hidden',
        'type' => 'entity_reference_label',
        'settings' => [
          'link' => TRUE,
        ],
      ]);
    }

    // Add author information.
    $author = $node->getOwner();
    if ($author->isAnonymous()) {
      $variables['author_name'] = t('Anonymous');
      $variables['author_avatar'] = NULL;
      $variables['author_initial'] = 'A';
    }
    else {
      $variables['author_name'] = $author->getDisplayName();

      // Check if user has field_avatar field.
      if ($author->hasField('field_avatar') && !$author->get('field_avatar')->isEmpty()) {
        $avatar_field = $author->get('field_avatar')->first();
        if ($avatar_field && $avatar_field->entity) {
          $variables['author_avatar'] = \Drupal::service('file_url_generator')->generateAbsoluteString($avatar_field->entity->getFileUri());
        }
        else {
          $variables['author_avatar'] = NULL;
        }
      }
      else {
        $variables['author_avatar'] = NULL;
      }

      // Get first letter of author name for initial.
      $name = $author->getDisplayName();
      $variables['author_initial'] = mb_strtoupper(mb_substr($name, 0, 1));
    }

    // Get view count from statistics module if available.
    $variables['view_count'] = 0;
    if (\Drupal::moduleHandler()->moduleExists('statistics')) {
      $database = \Drupal::database();
      try {
        if ($database->schema()->tableExists('node_counter')) {
          $query = $database->select('node_counter', 'nc')
            ->fields('nc', ['totalcount'])
            ->condition('nid', $node->id());
          $result = $query->execute()->fetchField();
          if ($result !== FALSE) {
            $variables['view_count'] = (int) $result;
          }
        }
      }
      catch (\Exception $e) {
        \Drupal::logger('news_theme')->error('Error fetching view count: @message', ['@message' => $e->getMessage()]);
      }
    }

    // Add node ID for collect button.
    $variables['node_id'] = $node->id();

    // Add longer body text excerpt.
    if ($node->hasField('body') && !$node->get('body')->isEmpty()) {
      $body_value = $node->get('body')->value;
      $plain_text = strip_tags($body_value);
      // Increase to 300 characters (from 200).
      if (mb_strlen($plain_text) > 300) {
        $plain_text = mb_substr($plain_text, 0, 300) . '...';
      }
      $variables['body_excerpt'] = $plain_text;
    }

    // Add formatted date without author information for footer.
    $created = $node->getCreatedTime();
    $variables['date'] = \Drupal::service('date.formatter')->format($created, 'custom', 'F j, Y');
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter() for page templates.
 */
function news_theme_theme_suggestions_page_alter(array &$suggestions, array $variables) {
  // Add page--front suggestion for front page.
  if (\Drupal::service('path.matcher')->isFrontPage()) {
    $suggestions[] = 'page__front';
  }

  // Add page--search suggestion for search pages.
  $route_name = \Drupal::routeMatch()->getRouteName();
