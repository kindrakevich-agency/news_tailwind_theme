/**
 * Helper function to get newsletter featured articles.
 *
 * @return array
 *   Array containing latest_article and featured_article data.
 */
function _news_theme_get_newsletter_articles() {
  $result = [
    'latest_article' => NULL,
    'featured_article' => NULL,
  ];

  // Query for the latest 2 published articles.
  $query = \Drupal::entityQuery('node')
    ->condition('type', 'article')
    ->condition('status', 1)
    ->sort('created', 'DESC')
    ->range(0, 2)
    ->accessCheck(TRUE);

  $nids = $query->execute();

  if (count($nids) >= 2) {
    $nodes = Node::loadMultiple($nids);
    $nodes = array_values($nodes);

    // First article (latest) - for the tagline.
    if (isset($nodes[0])) {
      $latest = $nodes[0];
      $result['latest_article'] = [
        'title' => $latest->getTitle(),
        'url' => $latest->toUrl()->toString(),
      ];
    }

    // Second article - for the featured card.
    if (isset($nodes[1])) {
      $featured = $nodes[1];
      $author = $featured->getOwner();

      // Get first tag name if available.
      $tag_name = '';
      if ($featured->hasField('field_tags') && !$featured->get('field_tags')->isEmpty()) {
        $first_tag = $featured->get('field_tags')->first();
        if ($first_tag) {
          $tag_term = Term::load($first_tag->target_id);
          if ($tag_term) {
            $tag_name = $tag_term->getName();
          }
        }
      }

      // Get excerpt from body.
      $excerpt = '';
      $excerpt_desktop = '';
      if ($featured->hasField('body') && !$featured->get('body')->isEmpty()) {
        $body = $featured->get('body')->value;
        $plain_text = strip_tags($body);

        // Mobile excerpt (200 chars)
        if (mb_strlen($plain_text) > 200) {
          $excerpt = mb_substr($plain_text, 0, 200) . '...';
        }
        else {
          $excerpt = $plain_text;
        }

        // Desktop excerpt (500 chars)
        if (mb_strlen($plain_text) > 500) {
          $excerpt_desktop = mb_substr($plain_text, 0, 500) . '...';
        }
        else {
          $excerpt_desktop = $plain_text;
        }
      }

      // Calculate reading time.
      $reading_time = 1;
      if ($featured->hasField('body') && !$featured->get('body')->isEmpty()) {
        $body = $featured->get('body')->value;
        $word_count = str_word_count(strip_tags($body));
        $reading_time = ceil($word_count / 200);
      }

      // Calculate time ago.
      $created = $featured->getCreatedTime();
      $time_ago = _news_theme_time_ago($created);

      // Get author avatar from field_avatar.
      $author_avatar = NULL;
      if ($author->hasField('field_avatar') && !$author->get('field_avatar')->isEmpty()) {
        $avatar_field = $author->get('field_avatar')->first();
        if ($avatar_field && $avatar_field->entity) {
          $author_avatar = \Drupal::service('file_url_generator')->generateAbsoluteString($avatar_field->entity->getFileUri());
        }
      }

      $result['featured_article'] = [
        'title' => $featured->getTitle(),
        'url' => $featured->toUrl()->toString(),
        'author_name' => $author->getDisplayName(),
        'author_initial' => mb_substr($author->getDisplayName(), 0, 1),
        'author_avatar' => $author_avatar,
        'excerpt' => $excerpt,
        'excerpt_desktop' => $excerpt_desktop,
        'tags' => $tag_name,
        'reading_time' => $reading_time,
        'time_ago' => $time_ago,
        'image' => NULL,
      ];

      // Get image if available.
      if ($featured->hasField('field_image') && !$featured->get('field_image')->isEmpty()) {
        $view_builder = \Drupal::entityTypeManager()->getViewBuilder('node');
        $image_render = $view_builder->viewField($featured->get('field_image'), [
          'label' => 'hidden',
          'type' => 'image',
          'settings' => [
            'image_style' => '',
            'image_link' => '',
          ],
        ]);
        if (isset($image_render[0])) {
          $result['featured_article']['image'] = $image_render[0];
        }
      }
    }
  }

  return $result;
}

/**
 * Helper function to calculate time ago.
 *
 * @param int $timestamp
 *   Unix timestamp.
 *
 * @return string
 *   Time ago string.
 */
function _news_theme_time_ago($timestamp) {
  $time_ago = \Drupal::time()->getRequestTime() - $timestamp;

  if ($time_ago < 60) {
    return t('@count seconds ago', ['@count' => $time_ago]);
  }
  elseif ($time_ago < 3600) {
    $minutes = floor($time_ago / 60);
    return t('@count minutes ago', ['@count' => $minutes]);
  }
  elseif ($time_ago < 86400) {
    $hours = floor($time_ago / 3600);
    return t('@count hours ago', ['@count' => $hours]);
  }
  else {
    $days = floor($time_ago / 86400);
    return t('@count days ago', ['@count' => $days]);
  }
}

/**
 * Helper function to get exchange rates for UAH.
 *
 * Fetches UAH exchange rates from a free API and caches for 3 hours.
 *
 * @return array
 *   Array of exchange rates with currency codes as keys.
 */
function _news_theme_get_exchange_rates() {
  $cache_key = 'news_theme:exchange_rates';
  $cache = \Drupal::cache()->get($cache_key);

  if ($cache && !empty($cache->data)) {
    return $cache->data;
  }

  // Currencies to display: EUR, USD, PLN, GBP, MDL, CZK, CHF, DKK, NOK
  $currencies = ['EUR', 'USD', 'PLN', 'GBP', 'MDL', 'CZK', 'CHF', 'DKK', 'NOK'];
  $rates = [];

  try {
    // Use exchangerate-api.com free API (no key required)
    $url = 'https://api.exchangerate-api.com/v4/latest/UAH';
    $response = \Drupal::httpClient()->get($url, ['timeout' => 5]);

    if ($response->getStatusCode() == 200) {
      $data = json_decode($response->getBody(), TRUE);

      if (!empty($data['rates'])) {
        foreach ($currencies as $currency) {
          if (isset($data['rates'][$currency]) && $data['rates'][$currency] > 0) {
            // Invert the rate to show how many UAH for 1 unit of foreign currency
            $inverted_rate = 1 / $data['rates'][$currency];
            $rates[$currency] = [
              'code' => $currency,
              'rate' => number_format($inverted_rate, 2),
            ];
          }
        }
      }
    }
  }
  catch (\Exception $e) {
    \Drupal::logger('news_theme')->error('Error fetching exchange rates: @message', ['@message' => $e->getMessage()]);
  }

  // Cache for 3 hours (10800 seconds).
  // This cache will be automatically cleared when Drupal cache is cleared.
  if (!empty($rates)) {
    \Drupal::cache()->set($cache_key, $rates, \Drupal::time()->getRequestTime() + 10800);
  }

  return $rates;
}

/**
 * Helper function to get top news by category.
 *
 * Fetches up to 15 unique articles (5 per block, 3 blocks).
 * Ensures each article appears only once even if assigned to multiple categories.
 *
 * @return array
 *   Array of articles with their category names.
 */
function _news_theme_get_top_news_by_category() {
  $articles = [];
  $used_nids = [];
  $term_storage = \Drupal::entityTypeManager()->getStorage('taxonomy_term');
  $terms = $term_storage->loadTree('tags', 0, NULL, TRUE);

  // Define color schemes for tags with dark mode variants.
  $color_schemes = [
    ['bg' => 'bg-blue-100 dark:bg-blue-900/30', 'text' => 'text-blue-800 dark:text-blue-400', 'hover' => 'hover:bg-blue-200 dark:hover:bg-blue-900/40'],
    ['bg' => 'bg-purple-100 dark:bg-purple-900/30', 'text' => 'text-purple-800 dark:text-purple-400', 'hover' => 'hover:bg-purple-200 dark:hover:bg-purple-900/40'],
    ['bg' => 'bg-red-100 dark:bg-red-900/30', 'text' => 'text-red-800 dark:text-red-400', 'hover' => 'hover:bg-red-200 dark:hover:bg-red-900/40'],
    ['bg' => 'bg-green-100 dark:bg-green-900/30', 'text' => 'text-green-800 dark:text-green-400', 'hover' => 'hover:bg-green-200 dark:hover:bg-green-900/40'],
    ['bg' => 'bg-yellow-100 dark:bg-yellow-900/30', 'text' => 'text-yellow-800 dark:text-yellow-400', 'hover' => 'hover:bg-yellow-200 dark:hover:bg-yellow-900/40'],
    ['bg' => 'bg-pink-100 dark:bg-pink-900/30', 'text' => 'text-pink-800 dark:text-pink-400', 'hover' => 'hover:bg-pink-200 dark:hover:bg-pink-900/40'],
    ['bg' => 'bg-indigo-100 dark:bg-indigo-900/30', 'text' => 'text-indigo-800 dark:text-indigo-400', 'hover' => 'hover:bg-indigo-200 dark:hover:bg-indigo-900/40'],
    ['bg' => 'bg-teal-100 dark:bg-teal-900/30', 'text' => 'text-teal-800 dark:text-teal-400', 'hover' => 'hover:bg-teal-200 dark:hover:bg-teal-900/40'],
  ];

  // Try to get 1 article from each category first
  foreach ($terms as $term) {
    if (count($articles) >= 15) {
      break;
    }

    $query = \Drupal::entityQuery('node')
      ->condition('type', 'article')
      ->condition('status', 1)
      ->condition('field_tags', $term->id())
      ->sort('created', 'DESC')
      ->range(0, 10)
      ->accessCheck(TRUE);

    $nids = $query->execute();

    foreach ($nids as $nid) {
      if (count($articles) >= 15) {
        break;
      }

      // Skip if we've already added this article
      if (in_array($nid, $used_nids)) {
        continue;
      }

      $node = \Drupal::entityTypeManager()->getStorage('node')->load($nid);

      if ($node) {
        // Assign a consistent color based on term ID.
        $color_index = $term->id() % count($color_schemes);
        $colors = $color_schemes[$color_index];

        $articles[] = [
          'title' => $node->getTitle(),
          'url' => \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $node->id()),
          'category_name' => $term->getName(),
          'category_url' => \Drupal::service('path_alias.manager')->getAliasByPath('/taxonomy/term/' . $term->id()),
          'created' => $node->getCreatedTime(),
          'category_bg' => $colors['bg'],
          'category_text' => $colors['text'],
          'category_hover' => $colors['hover'],
        ];
        $used_nids[] = $nid;
        break; // Only take one article per category in first pass
      }
    }
  }

  // If we have fewer than 15 articles, get more from categories
  if (count($articles) < 15) {
    foreach ($terms as $term) {
      if (count($articles) >= 15) {
        break;
      }

      $query = \Drupal::entityQuery('node')
        ->condition('type', 'article')
        ->condition('status', 1)
        ->condition('field_tags', $term->id())
        ->sort('created', 'DESC')
        ->range(0, 20)
        ->accessCheck(TRUE);

      $nids = $query->execute();

      foreach ($nids as $nid) {
        if (count($articles) >= 15) {
          break;
        }

        // Skip if we've already added this article
        if (in_array($nid, $used_nids)) {
          continue;
        }

        $node = \Drupal::entityTypeManager()->getStorage('node')->load($nid);

        if ($node) {
          // Assign a consistent color based on term ID.
          $color_index = $term->id() % count($color_schemes);
          $colors = $color_schemes[$color_index];

          $articles[] = [
            'title' => $node->getTitle(),
            'url' => \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $node->id()),
            'category_name' => $term->getName(),
            'category_url' => \Drupal::service('path_alias.manager')->getAliasByPath('/taxonomy/term/' . $term->id()),
            'created' => $node->getCreatedTime(),
            'category_bg' => $colors['bg'],
            'category_text' => $colors['text'],
            'category_hover' => $colors['hover'],
          ];
          $used_nids[] = $nid;
        }
      }
    }
  }

  return $articles;
}
